{
  "manifest_version": 3,
  "name": "Lasso Demo Extension",
  "version": "0.1.0",
  "description": "intercept fetch requests and anonymize email addresses on specific domains",
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "Lasso Demo"
  },
  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "src/background/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://chatgpt.com/*",
        "*://*.chatgpt.com/*",
        "*://openai.com/*",
        "*://*.openai.com/*"
      ],
      "js": ["src/content/content.ts"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://chatgpt.com/*", "*://*.chatgpt.com/*"],
      "js": ["src/content/intercept-fetch.ts"],
      "run_at": "document_start"
    }
  ],
  
  "permissions": ["storage"],
  "host_permissions": [
    "*://chatgpt.com/*",
    "*://*.chatgpt.com/*",
    "*://openai.com/*",
    "*://*.openai.com/*"
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "*://chatgpt.com/*",
        "*://*.chatgpt.com/*"
      ],
      "resources": ["injected-script.js", "src/injected-script.ts"]
    }
  ]
}
